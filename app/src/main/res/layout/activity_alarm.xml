<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_360_640"
    tools:context="com.thearktech.slidescape.AlarmActivity">

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_content"
        android:layout_centerInParent="true"
        app:rb_color="#FF0000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_duration="3000"
        app:rb_scale="6">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:src="@drawable/stopwatch"/>
    </com.skyfishjy.library.RippleBackground>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="100sp"
        android:text="10"/>

    <TextView
        android:id="@+id/tap_btn_to_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullscreen_content"
        android:layout_marginTop="-80dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Tap button to stop"/>

</RelativeLayout>
